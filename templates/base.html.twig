<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>CUTURL-
			{% block title %}{% endblock %}
		</title>
		<link
		rel="icon" href="/images/cat2.png" type="image/x-icon">
		<!-- Bootstrap core CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
		<link rel="stylesheet" href="style.css">
		<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		<script type="text/javascript">
			let globalData;
		</script>
		<!-- JQuery -->

		<!-- Bootstrap tooltips -->
		<!-- Bootstrap core JavaScript --><script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"> </script>
		<script type="text/javascript" src="/js/jquery-3.6.0.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.min.css" rel="stylesheet"/>

	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top ">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('app_homepage') }}"><img src="/images/logo17.png" alt="" width="80" height="30"></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<li class="nav-item">
									
									<a class="nav-link " href="{{path('app_homepage') }}"><i class="bi bi-house-door"></i> Accueil</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_solutions')}}">Les Solutions</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_traits')}}">Les Traits</a>
								</li>
								<li class="nav-item">
									{% if app.user.urls.count %}
										<a class="nav-link" href="{{ path('url_list') }}">Mes Liens</a>
									{% endif %}
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link " href="{{path('app_homepage') }}"><i class="bi bi-house-door"></i>  Accueil</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_tarification')}}">Les Tarifications</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_solutions')}}">Les Solutions</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_traits')}}">Les Traits</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
		
				<div class="collapse navbar-collapse pe-5 me-2" id="navbarNavDarkDropdown">
				<ul class="navbar-nav ">
					<li class="nav-item dropdown">
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="{{app.user.img}}" class="rounded-circle" height="35" alt=" Man" loading="lazy"/>
								{{app.user.prenom}}
								{{app.user.nom}}
							</a>
						{% else %}
							<a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="/images/avatar1.jpg" class="rounded-circle" height="35" alt="Black and White Portrait of a Man" loading="lazy"/>
							</a>
						{% endif %}
						<ul class="dropdown-menu dropdown-menu-dark pe-5 me-5 " aria-labelledby="navbarDarkDropdownMenuLink">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								<li>
									<a class="dropdown-item " href="{{ path('app_profil') }}"> <i class="bi bi-person-lines-fill"></i> Mon Compte</a>

								</li>
								<li>
									<a class="dropdown-item " href="{{ path('app_edit') }}"><i class="bi bi-gear"></i> Modifier mon profil</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_mdpup') }}"><i class="bi bi-lock-fill"></i> Confidentialité</a>
								</li>
								<hr>
								<li >
									<a class="dropdown-item" href="{{ path('app_logout') }}"> <i class="bi bi-box-arrow-right"></i> Déconnexion</a>
								</li>
							{% else %}
								<li >
									<a class="dropdown-item " href="{{ path('app_login') }}"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
								</li>
								<hr>
								<li>
									<a class="dropdown-item " href="{{ path('app_tarification') }}"><i class="bi bi-person-plus"></i> Inscription</a>
								</li>
							{% endif %}
						</ul>
					</li>
				</ul>
				</div>
			</nav>
		</header>
	</body>

</html>{% block body %}{% endblock %}
{% block footer %}{% endblock %}
